<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="46bfa84f-a295-4ed8-a685-45157da0b9a1" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>Build Python Wheels</name>
  <description />
  <settings>
    <parameters>
      <param name="conda_env_path" value=" %system.teamcity.build.checkoutDir%\pyEnv " />
    </parameters>
    <build-runners>
      <runner id="RUNNER_2223" name="Build wheel" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[rm -rf %conda_env_path%
module load anaconda3
conda create -p %conda_env_path%_mm -c conda-forge -y python=3.10 micromamba
conda activate %conda_env_path%_mm
micromamba create ribasim -p %conda_env_path% --file=environment.yaml
micromamba run -p %conda_env_path% pip wheel python/ribasim --no-deps]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Ribasim_Ribasim_Ribasim" />
    </vcs-settings>
    <requirements>
      <does-not-equal id="RQ_296" name="env.OS" value="Windows_NT" />
    </requirements>
    <build-triggers />
    <cleanup />
  </settings>
</build-type>

